<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <guopuran.bwie.com.guopuran20181203.CustomViewTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></guopuran.bwie.com.guopuran20181203.CustomViewTitle>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <guopuran.bwie.com.guopuran20181203.GroupName
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:text="最近搜索"
            app:textsize="20sp"
            app:textcolor="#ff6699" />

        <Button
            android:id="@+id/qingkong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="296dp"
            android:text="清空" />
    </RelativeLayout>
    <guopuran.bwie.com.guopuran20181203.CustomViewSearch
        android:id="@+id/search_zui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></guopuran.bwie.com.guopuran20181203.CustomViewSearch>
    <guopuran.bwie.com.guopuran20181203.GroupName
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索发现"
        app:textsize="20sp"
        app:textcolor="#ff9966" />
    <guopuran.bwie.com.guopuran20181203.CustomViewSearch
        android:id="@+id/faxian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></guopuran.bwie.com.guopuran20181203.CustomViewSearch>
</LinearLayout>